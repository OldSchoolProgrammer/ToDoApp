@model TodoCalendar.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-4"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h2>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="bi bi-list-task fs-1 text-primary"></i>
                <h3 class="mt-2">@Model.TotalTasks</h3>
                <p class="text-muted mb-0">Total Tasks</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="bi bi-check-circle fs-1 text-success"></i>
                <h3 class="mt-2">@Model.CompletedTasks</h3>
                <p class="text-muted mb-0">Completed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                <h3 class="mt-2">@Model.PendingTasks</h3>
                <p class="text-muted mb-0">Pending</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle fs-1 text-danger"></i>
                <h3 class="mt-2">@Model.OverdueTasks</h3>
                <p class="text-muted mb-0">Overdue</p>
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Tasks -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Upcoming Tasks</h5>
            </div>
            <div class="card-body">
                @if (Model.UpcomingTasks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var task in Model.UpcomingTasks)
                        {
                            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@task.Title</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> @task.DueDate?.ToString("MMM dd, yyyy")
                                            @if (task.CategoryName != null)
                                            {
                                                <span class="badge ms-2" style="background-color: @task.CategoryColor">
                                                    @task.CategoryName
                                                </span>
                                            }
                                        </small>
                                    </div>
                                    <span class="@task.PriorityBadgeClass">@task.PriorityText</span>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p class="text-center text-muted my-4">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        No upcoming tasks
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- High Priority Tasks -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-flag-fill me-2 text-danger"></i>High Priority</h5>
            </div>
            <div class="card-body">
                @if (Model.HighPriorityTasks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var task in Model.HighPriorityTasks)
                        {
                            <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@task.Title</h6>
                                        <small class="text-muted">
                                            @if (task.DueDate.HasValue)
                                            {
                                                <i class="bi bi-calendar3"></i> @task.DueDate?.ToString("MMM dd, yyyy")
                                            }
                                            @if (task.CategoryName != null)
                                            {
                                                <span class="badge ms-2" style="background-color: @task.CategoryColor">
                                                    @task.CategoryName
                                                </span>
                                            }
                                        </small>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p class="text-center text-muted my-4">
                        <i class="bi bi-check-circle fs-1 d-block mb-2"></i>
                        No high priority tasks
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recently Completed -->
@if (Model.RecentlyCompletedTasks.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-check2-all me-2 text-success"></i>Recently Completed</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var task in Model.RecentlyCompletedTasks)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-decoration-line-through text-muted">@task.Title</h6>
                                        <small class="text-muted">
                                            Completed: @task.CompletedDate?.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
