@model TodoCalendar.ViewModels.TaskViewModel
@{
    ViewData["Title"] = "Task Details";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header @(Model.IsCompleted ? "bg-success text-white" : "bg-info text-white")">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Task Details</h4>
                    @if (Model.IsCompleted)
                    {
                        <span class="badge bg-light text-success">
                            <i class="bi bi-check-circle-fill"></i> Completed
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <h3 class="@(Model.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                    @Model.Title
                </h3>

                <hr />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-flag-fill me-2"></i>Priority:</strong>
                        <span class="@Model.PriorityBadgeClass">@Model.PriorityText</span>
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-calendar3 me-2"></i>Due Date:</strong>
                        @if (Model.DueDate.HasValue)
                        {
                            var isOverdue = !Model.IsCompleted && Model.DueDate < DateTime.Now;
                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                @Model.DueDate?.ToString("MMM dd, yyyy")
                                @if (isOverdue)
                                {
                                    <i class="bi bi-exclamation-triangle"></i>
                                }
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong><i class="bi bi-tag me-2"></i>Category:</strong>
                        @if (Model.CategoryName != null)
                        {
                            <span class="badge" style="background-color: @Model.CategoryColor">
                                @Model.CategoryName
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">No category</span>
                        }
                    </div>
                    <div class="col-md-6">
                        <strong><i class="bi bi-clock me-2"></i>Created:</strong>
                        <span>@Model.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                    </div>
                </div>

                @if (Model.IsCompleted && Model.CompletedDate.HasValue)
                {
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong><i class="bi bi-check-circle me-2"></i>Completed:</strong>
                            <span>@Model.CompletedDate?.ToString("MMM dd, yyyy hh:mm tt")</span>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-tags me-2"></i>Tags:</strong>
                        <div class="mt-2">
                            @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                            {
                                <span class="badge bg-secondary me-1">@tag.Trim()</span>
                            }
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong><i class="bi bi-card-text me-2"></i>Description:</strong>
                        <p class="mt-2">@Model.Description</p>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <p class="text-muted fst-italic">No description provided.</p>
                    </div>
                }
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete "<strong>@Model.Title</strong>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
