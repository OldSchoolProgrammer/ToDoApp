@model IEnumerable<TodoCalendar.ViewModels.TaskViewModel>
@{
    ViewData["Title"] = "Tasks";
    var categories = ViewBag.Categories as List<TodoCalendar.Models.Category>;
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2><i class="bi bi-list-task me-2"></i>My Tasks</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <input type="text" class="form-control" name="search" placeholder="Search tasks..." value="@ViewBag.Search">
            </div>
            <div class="col-md-2">
                <select class="form-select" name="categoryId">
                    <option value="">All Categories</option>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id" selected="@(ViewBag.CategoryId == category.Id)">
                                @category.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" name="priority">
                    <option value="">All Priorities</option>
                    <option value="3" selected="@(ViewBag.Priority == 3)">High</option>
                    <option value="2" selected="@(ViewBag.Priority == 2)">Medium</option>
                    <option value="1" selected="@(ViewBag.Priority == 1)">Low</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" name="completed">
                    <option value="">All Status</option>
                    <option value="false" selected="@(ViewBag.Completed == false)">Pending</option>
                    <option value="true" selected="@(ViewBag.Completed == true)">Completed</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Tasks List -->
@if (Model.Any())
{
    <div class="row g-3">
        @foreach (var task in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm @(task.IsCompleted ? "border-success" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0 @(task.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                @task.Title
                            </h5>
                            <span class="@task.PriorityBadgeClass">@task.PriorityText</span>
                        </div>

                        @if (!string.IsNullOrEmpty(task.Description))
                        {
                            <p class="card-text text-muted small">
                                @(task.Description.Length > 100 ? task.Description.Substring(0, 100) + "..." : task.Description)
                            </p>
                        }

                        <div class="mb-2">
                            @if (task.DueDate.HasValue)
                            {
                                var isOverdue = !task.IsCompleted && task.DueDate < DateTime.Now;
                                <small class="@(isOverdue ? "text-danger" : "text-muted")">
                                    <i class="bi bi-calendar3"></i> @task.DueDate?.ToString("MMM dd, yyyy")
                                </small>
                            }
                        </div>

                        @if (task.CategoryName != null)
                        {
                            <span class="badge mb-2" style="background-color: @task.CategoryColor">
                                @task.CategoryName
                            </span>
                        }

                        @if (!string.IsNullOrEmpty(task.Tags))
                        {
                            <div class="mb-2">
                                @foreach (var tag in task.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input toggle-complete" type="checkbox" 
                                       data-task-id="@task.Id" @(task.IsCompleted ? "checked" : "")>
                                <label class="form-check-label small">
                                    @(task.IsCompleted ? "Completed" : "Mark Complete")
                                </label>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal@(task.Id)" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal@(task.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete "<strong>@task.Title</strong>"?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
        <h4 class="text-muted">No tasks found</h4>
        <p class="text-muted">Create your first task to get started!</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.toggle-complete').on('change', function() {
                var checkbox = $(this);
                var taskId = checkbox.data('task-id');
                
                $.post('@Url.Action("ToggleComplete", "Tasks")', { id: taskId }, function(result) {
                    if (result.success) {
                        location.reload();
                    }
                });
            });
        });
    </script>
}
